local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "Asta Hub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "MeuConfig"
})

-- Adicionando a aba "Player Controls"
local PlayerControlsTab = Window:MakeTab({
    Name = "Player Controls",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Adicionando seção "Controle de Velocidade" à aba "Player Controls"
local SpeedSection = PlayerControlsTab:AddSection({
    Name = "Speed Control"
})

-- Adicionando seção "Controle de Pulo" à aba "Player Controls"
local JumpSection = PlayerControlsTab:AddSection({
    Name = "Jump Control"
})

-- Adicionando seção "Teleporte" à aba "Player Controls"
local TeleportSection = PlayerControlsTab:AddSection({
    Name = "Teleport"
})

-- Variáveis para controle de teleporte
local returnPoint = nil

-- Função para atualizar a velocidade do jogador
local function updateSpeed(value)
    local character = game.Players.LocalPlayer.Character
    if character and character:FindFirstChild("Humanoid") then
        character.Humanoid.WalkSpeed = value
    end
end

-- Função para atualizar o pulo do jogador
local function updateJumpPower(value)
    local character = game.Players.LocalPlayer.Character
    if character and character:FindFirstChild("Humanoid") then
        character.Humanoid.UseJumpPower = true
        character.Humanoid.JumpPower = value
    end
end

-- Função para atualizar o status do botão
local function updateStatus(section, enabled, text)
    section:SetText(text)
    section:SetTextColor(enabled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0))
end

-- Função para teletransportar o jogador para um jogador pelo nome
local function teleportToPlayer(name)
    local targetPlayer = game.Players:FindFirstChild(name)
    if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.CFrame = targetPlayer.Character.HumanoidRootPart.CFrame
            OrionLib:MakeNotification({
                Name = "Sucesso",
                Content = "Teleportado para " .. name,
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    else
        OrionLib:MakeNotification({
            Name = "Erro",
            Content = "Jogador não encontrado: " .. name,
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
end

-- Função para atualizar a lista de jogadores no dropdown
local function updatePlayerList()
    local playerNames = {}
    for _, player in ipairs(game.Players:GetPlayers()) do
        table.insert(playerNames, player.Name)
    end
    return playerNames
end

-- Função para salvar o ponto de retorno
local function saveReturnPoint()
    local character = game.Players.LocalPlayer.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        returnPoint = character.HumanoidRootPart.CFrame
        OrionLib:MakeNotification({
            Name = "Ponto Salvo",
            Content = "Ponto de retorno salvo com sucesso!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
end

-- Função para retornar ao ponto salvo
local function teleportToReturnPoint()
    if returnPoint then
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.CFrame = returnPoint
            OrionLib:MakeNotification({
                Name = "Retorno",
                Content = "Teleportado para o ponto salvo!",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    else
        OrionLib:MakeNotification({
            Name = "Erro",
            Content = "Nenhum ponto de retorno salvo!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
end

-- Adicionando um botão para ativar/desativar o "hack de velocidade" na seção de velocidade
SpeedSection:AddButton({
    Name = "Velocidade",
    Callback = function()
        speedEnabled = not speedEnabled
        if speedEnabled then
            speedValue = 50
            updateSpeed(speedValue)
            print("Speed Hack Ativado")
        else
            speedValue = 16
            updateSpeed(speedValue)
            print("Speed Hack Desativado")
        end
        updateStatus(SpeedSection, speedEnabled, "Velocidade: " .. (speedEnabled and "Ativado" or "Desativado"))
    end
})

-- Adicionando uma caixa de texto para ajustar a velocidade na seção de velocidade
SpeedSection:AddTextbox({
    Name = "Definir velocidade",
    Default = tostring(speedValue),
    TextDisappear = false,
    Callback = function(value)
        local newValue = tonumber(value)
        if newValue and newValue >= 0 and newValue <= 99999 then
            speedValue = newValue
            if speedEnabled then
                updateSpeed(speedValue)
            end
        else
            OrionLib:MakeNotification({
                Name = "Erro",
                Content = "Por favor, insira um valor entre 0 e 99999 para a velocidade.",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    end,
    Width = 200
})

-- Adicionando um botão para ativar/desativar o "hack de pulo" na seção de pulo
JumpSection:AddButton({
    Name = "Pulo",
    Callback = function()
        jumpEnabled = not jumpEnabled
        if jumpEnabled then
            jumpPowerValue = 100
            updateJumpPower(jumpPowerValue)
            print("Hack de Pulo Ativado")
        else
            jumpPowerValue = 50
            updateJumpPower(jumpPowerValue)
            print("Hack de Pulo Desativado")
        end
        updateStatus(JumpSection, jumpEnabled, "Pulo: " .. (jumpEnabled and "Ativado" or "Desativado"))
    end
})

-- Adicionando uma caixa de texto para ajustar a altura do pulo na seção de pulo
JumpSection:AddTextbox({
    Name = "Definir pulo",
    Default = tostring(jumpPowerValue),
    TextDisappear = false,
    Callback = function(value)
        local newValue = tonumber(value)
        if newValue and newValue >= 0 and newValue <= 99999 then
            jumpPowerValue = newValue
            if jumpEnabled then
                updateJumpPower(jumpPowerValue)
            end
        else
            OrionLib:MakeNotification({
                Name = "Erro",
                Content = "Por favor, insira um valor entre 0 e 99999 para o pulo.",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    end,
    Width = 200
})

-- Adicionando uma lista suspensa (dropdown) para selecionar o jogador na seção de teleporte
TeleportSection:AddDropdown({
    Name = "Selecionar Jogador",
    Options = updatePlayerList(),
    Callback = function(selectedName)
        if selectedName then
            teleportToPlayer(selectedName)
        end
    end
})

-- Adicionando botões para salvar ponto de retorno e teletransportar para o ponto salvo na seção de teleporte
TeleportSection:AddButton({
    Name = "Salvar Ponto de Retorno",
    Callback = function()
        saveReturnPoint()
    end
})

TeleportSection:AddButton({
    Name = "Teletransportar para Ponto Salvo",
    Callback = function()
        teleportToReturnPoint()
    end
})

-- Atualiza a lista de jogadores periodicamente
game.Players.PlayerAdded:Connect(function()
    local dropdown = TeleportSection:GetDropdown("Selecionar Jogador")
    dropdown:SetOptions(updatePlayerList())
end)

game.Players.PlayerRemoving:Connect(function()
    local dropdown = TeleportSection:GetDropdown("Selecionar Jogador")
    dropdown:SetOptions(updatePlayerList())
end)

-- Notificação de boas-vindas
OrionLib:MakeNotification({
    Name = "Bem-vindo!",
    Content = "Você entrou no hub atualizado com novas funcionalidades!",
    Image = "rbxassetid://1234567890",
    Time = 10
})
